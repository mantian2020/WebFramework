@using System.Web.Optimization
@using CommonHelper
@using CoreFramework.Services
@model CommonHelper.Entity.PageInfo<Shop.Template.Model.Shop_Menu>
@{
    Layout = "~/Views/Shared/_LayoutMasterPage.cshtml";
}
@{
    var allModules = SerializeHelper.Deserialize<List<Shop.Template.Model.Shop_Modules>>(ModuleServices.GetModules());
}
@section Style{
    <style type="text/css">
        .row {
            margin-top: 5px;
        }
        #addMenuDialog .modal-body {
            max-height: 800px;
        }
    </style>
}

@section Crumb
{
    <a href="/template/template/MenuManage" class="tip-bottom">
        <i class="icon-home"></i> 菜单管理
    </a>
    <a href="#" class="current">菜单列表</a>
}
<div class="container">
    <div class="row">
        <div class="span11">
            <a href="#addMenuDialog" role="button" class="btn btn-primary" data-toggle="modal">添加菜单</a>
        </div>
    </div>
    <div class="row">
        <div class="span11">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>菜单ID</th>
                        <th>菜单名</th>
                        <th>菜单地址</th>
                        <th>菜单Code</th>
                        <th>父节点ID</th>
                        <th>菜单Icon</th>
                        <th>菜单排序</th>
                        <th>创建时间</th>
                        <th>创建人</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr class="@string.Format("{0}", item.Shop_MenuId % 2 == 0 ? "odd gradeX" : "even gradeC")">
                            <td>@item.Shop_MenuId</td>
                            <td>@item.Shop_MenuName</td>
                            <td>@item.Shop_MenuUrl</td>
                            <td>@item.Shop_MenuCode</td>
                            <td>@item.Shop_ParentId</td>
                            <td>@item.Shop_MenuIcon</td>
                            <td>@item.Shop_MenuSort</td>
                            <td>@item.Shop_MenuCreateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>@item.Shop_MenuCreator</td>
                            <td>
                                <a class="btn btn-primary btn-mini" href="/template/template/EditMenu/@item.Shop_MenuId">编辑</a>
                                <button class="btn btn-primary btn-mini" onclick="MenuHelper.DeleteMenu(@item.Shop_MenuId);">删除</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="pagination"></div>
        </div>
    </div>
</div>

    @section Script
{
        @Scripts.Render("~/bootstrap/js/paginator")
        @Scripts.Render("~/Scripts/Modules/Template/MenuHelper")
        <script type="text/javascript">
            var options = {
                currentPage: @Model.PageIndex,
                totalPages: @Model.TotalPageCount,
                alignment: "right",
                size: "normal",
                itemContainerClass: function (type, page, current) {
                    return (page === current) ? "active" : "pointer-cursor";
                },
                itemTexts: function (type, page, current) {
                    switch (type) {
                        case "first":
                            return "首页";
                        case "prev":
                            return "前一页";
                        case "next":
                            return "下一页";
                        case "last":
                            return "末页";
                        case "page":
                            return page;
                    }
                    return page;
                },
                onPageClicked: function (e, originalEvent, type, page) {
                    /*
                    e.stopImmediatePropagation();
                    var currentTarget = $(e.currentTarget);
                    var pages = currentTarget.bootstrapPaginator("getPages");
                    currentTarget.bootstrapPaginator("show", page);*/
                },
                pageUrl: function (type, page, current) {
                    return "/template/template/MenuManage/" + page;//return "/card/flow?page=" + page   ; //分页的链接,传递的参数为page
                }
            };

            $('#pagination').bootstrapPaginator(options);
        </script>
    }


<!-- Modal -->
<div id="addMenuDialog" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="addMenuDialogLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="addMenuDialogLabel">添加菜单</h3>
    </div>
    <div class="modal-body">
        <div class="row-fluid">
            <div class="form-horizontal">
                <div class="control-group">
                    <label class="control-label">菜单名:</label>
                    <div class="controls">
                        <input type="text" class="span6" value="" id="Shop_MenuName">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">菜单地址:</label>
                    <div class="controls">
                        <input type="text" class="span6" value="" id="Shop_MenuUrl">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">菜单Code:</label>
                    <div class="controls">
                        <input type="text" class="span6" value="" id="Shop_MenuCode">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">父节点ID:</label>
                    <div class="controls">
                        <input type="text" class="span6" value="" id="Shop_ParentId">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">菜单Icon:</label>
                    <div class="controls">
                        <input type="text" class="span6" value="" id="Shop_MenuIcon">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">菜单排序:</label>
                    <div class="controls">
                        <input type="text" class="span6" value="" id="Shop_MenuSort">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">是否有效:</label>
                    <div class="controls">
                        <label class="checkbox inline">
                            <input type="radio" value="1" name="Shop_MenuVaild" checked="checked">有效
                        </label>
                        <label class="checkbox inline">
                            <input type="radio" value="0" name="Shop_MenuVaild">无效
                        </label>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">所属模块:</label>
                    <div class="controls">
                        <select class="span6" id="Shop_ModuleId">
                            @foreach (var item in allModules)
                            {
                                <option value="@item.Shop_Modules_Id">@item.Shop_Modules_Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
        <button class="btn btn-primary" onclick="MenuHelper.AddMenu();">添加</button>
    </div>
</div>  

